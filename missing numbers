def find_missing_packet(nums):
    n = len(nums)
    
    # 1. Calculate the sum that SHOULD exist (0 to n)
    # In Python, // is used for integer division
    expected_sum = (n * (n + 1)) // 2
    
    # 2. Calculate the actual sum of the list
    actual_sum = sum(nums)
    
    # 3. The difference is the missing value (the dropped packet)
    return expected_sum - actual_sum

# Verification Test
# Range is [0, 3], so n=3. Numbers are [0, 1, 3]. 
# Expected: 2 is missing.
packets = [3, 0, 1]
print(f"Missing ID: {find_missing_packet(packets)}")
